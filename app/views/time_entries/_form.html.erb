<%= form_for(time_entry) do |f| %>

  <% if time_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(time_entry.errors.count, "error") %>
        prohibited this matter from being saved:</h2>

      <ul>
      <% time_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :matter %><br>
  <%= f.collection_select :matter_id, Matter.order(:name), :id, :name, !matter.nil? ? {:selected => matter.id} : {include_blank: true} %><br>
  <%= f.label :date %><br>
  <%= f.date_select :date, :order => [:month, :day, :year], :max => Date.today %><br><br>
  <%= f.label :duration %><br>
  <%= f.text_field :duration %><br>
  <%= f.label :rate %><br>
  <%= f.text_field :rate %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :lawyer %><br>
  <%= f.collection_select :lawyer_id, Lawyer.order(:name), :id, :name, include_blank: true %><br><br>
  <%= f.label :billable %>
  <%= f.check_box :billable %>
  <%= f.label :paid %>
  <%= f.check_box :paid %><br><br>
  <%= f.submit %>

<% end %>
