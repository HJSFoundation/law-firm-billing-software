<h1>Edit Time Entry</h1>

<%= form_for(@time_entry) do |f| %>

  <%= f.label :matter %><br>
  <%= f.collection_select :matter_id, Matter.order(:name), :id, :name, include_blank: true %><br><br>
  <%= f.label :date %><br>
  <%= f.text_field :date %><br>
  <%= f.label :duration %><br>
  <%= f.text_field :duration %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :lawyer %><br>
  <%= f.collection_select :lawyer_id, Lawyer.order(:name), :id, :name, include_blank: true %><br><br>
  <%= f.label :billable %>
  <%= f.check_box :billable %>
  <%= f.label :paid %>
  <%= f.check_box :paid %><br><br>
  <%= f.submit "Update Time Entry"%>

<% end %>
