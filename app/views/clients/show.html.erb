<h3>Client Profile</h3>

  Name: <%= @client.name %><br>
  Address: <%= @client.address %><br>
  Phone: <%= @client.phone %><br>
  Email: <%= @client.email %><br>

  <br><%= button_to 'Edit Client', edit_client_path(@client), method: "get" %><br>

<hr>

<h4>Client Matters</h4>

  <% if !@client.matters.blank? %>
    <ol><% @client.matters.each do |matter| %>
      <li><%= link_to matter.name, matter_path(matter) %></li>
    <% end %></ol>
  <% else %>
    <%= "N/A" %><br>
  <% end %><br>

<hr>

<h4>Client Billing</h4>

  <p>Outstanding Balance: <%= number_to_currency(@client.total_outstanding_balance) %></p>

  <%= button_to 'Print Invoice', client_invoice_path(@client), method: "get" %><br>
