<%= form_for(lawyer) do |f| %>

  <%= render partial: "layouts/errors", locals: {instance: lawyer} %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :rate, "Hourly Rate ($/hr.)" %><br>
  <%= f.text_field :rate %><br><br>
  <%= f.submit %>

<% end %><br>
